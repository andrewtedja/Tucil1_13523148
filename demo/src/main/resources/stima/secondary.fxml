<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
        fx:controller="stima.SecondaryController">
    <top>
        <VBox spacing="10">
            <Button fx:id="backButton" text="Back" onAction="#switchToPrimary"/>
            <padding>
                <Insets top="10" right="15" bottom="10" left="15" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="fileNameLabel" text="File: Not loaded"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" text="Ready" />
            </HBox>
            <Separator />
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.7">
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Puzzle Board" />
                <Canvas fx:id="boardCanvas" width="400" height="400" />
                <HBox alignment="CENTER" spacing="15">
                    <CheckBox text="CLI Debug" onAction="#toggleVisualization" />
                    <Button fx:id="solveButton" text="Solve" onAction="#handleSolve" />
                    <Button fx:id="stopButton" text="Stop" onAction="#handleStop" />
                </HBox>
            </VBox>
            
            <VBox>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Puzzle Information" />
                <Label fx:id="infoLabel" wrapText="true" />
                <Separator />
                <Label text="Results" />
                <Label fx:id="statisticsLabel" wrapText="true" />
            </VBox>
        </SplitPane>
    </center>
</BorderPane>

