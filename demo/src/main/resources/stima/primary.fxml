<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="20.0" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="stima.PrimaryController" styleClass="main-container">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label fx:id="titleLabel" text="IQ Puzzler Solver" styleClass="title-label"/>
   <Label fx:id="subtitleLabel" text="A backtracking algorithm for puzzle solving" styleClass="subtitle-label"/>

   <!-- <ImageView fx:id="logoImage" fitHeight="200.0" fitWidth="200.0" preserveRatio="true" pickOnBounds="false" /> -->

   <VBox alignment="CENTER" spacing="15.0">
      <Button fx:id="loadFileButton" onAction="#handleLoadFile" text="Load Puzzle File" styleClass="primary-button" />
      <Button fx:id="exitButton" onAction="#handleExit" text="Exit" styleClass="secondary-button" />
   </VBox>
   
</VBox>
